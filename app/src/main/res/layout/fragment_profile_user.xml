<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProfileUserFragment">

    <TextView
        android:id="@+id/tvNameAndLastNameUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Nombre y Apellido"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/guidelineStar"
        app:layout_constraintTop_toBottomOf="@+id/ivProfileUserPhoto" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/tvPasswordUserTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ContraseÃ±a"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/guidelineStar"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailUser" />

    <ImageView
        android:id="@+id/ivProfileUserPhoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineTop" />

    <TextView
        android:id="@+id/tvNameUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nicolas"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tvApellidoUser"
        app:layout_constraintStart_toStartOf="@+id/guidelineStar"
        app:layout_constraintTop_toBottomOf="@+id/tvNameAndLastNameUser" />

    <TextView
        android:id="@+id/tvEmailUserTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Email user"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@id/tvApellidoUser"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/guidelineStar"
        app:layout_constraintTop_toBottomOf="@+id/tvNameUser" />

    <TextView
        android:id="@+id/tvApellidoUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fuentes"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvNameUser"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
        app:layout_constraintStart_toEndOf="@+id/tvNameUser"
        app:layout_constraintTop_toTopOf="@+id/tvNameUser" />

    <TextView
        android:id="@+id/tvEmailUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="nicoFuentes@gmail.com"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineStar"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailUserTitle" />

    <TextView
        android:id="@+id/tvPasswordUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="**********"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineStar"
        app:layout_constraintTop_toBottomOf="@+id/tvPasswordUserTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditProfileUser"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="80dp"
        android:text="Editar Perfil"
        app:cornerRadius="10dp"
        app:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineStar" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       app:layout_constraintGuide_percent="0.15" />


</androidx.constraintlayout.widget.ConstraintLayout>