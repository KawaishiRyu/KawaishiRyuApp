<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C8"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.ProfileUserFragment">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <io.github.florent37.shapeofview.shapes.ArcView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:elevation="4dp"
            app:shape_arc_height="40dp"
            app:shape_arc_position="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/C1" />
            <!-- YOUR CONTENT -->

        </io.github.florent37.shapeofview.shapes.ArcView>

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/C7"
        android:elevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfileUserPhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_launcher_foreground"
                app:civ_border_color="@color/C1"
                app:civ_border_width="3dp" />

            <TextView
                android:id="@+id/tvNameAndLastNameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="18dp"
                android:gravity="center"
                android:text="Nombre y Apellido:"
                android:textColor="@color/C6"
                android:textSize="22sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNameUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nicolas"
                    android:textColor="@color/C6"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginStart="20dp"
                    android:id="@+id/tvApellidoUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fuentes"
                    android:textColor="@color/C6"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvEmailUserTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email user"
                android:layout_gravity="center"
                android:textColor="@color/C6"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/tvEmailUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="nicoFuentes@gmail.com"
                android:textColor="@color/C6"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditProfileUser"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="80dp"
                android:backgroundTint="@color/C1"
                android:text="Editar Perfil"
                app:cornerRadius="10dp"
                app:elevation="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>