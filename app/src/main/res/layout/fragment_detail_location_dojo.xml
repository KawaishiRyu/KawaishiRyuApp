<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.DetailLocationDojoFragment">


    <ImageView
        android:id="@+id/ivDojoDetail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tvNameDojo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Name dojo" />

    <TextView
        android:id="@+id/tvNameSensei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:text="Name sensei" />

    <TextView
        android:id="@+id/tvDescription"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Description" />

    <TextView
        android:layout_margin="10dp"

        android:id="@+id/tvInstaUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insta url" />

    <TextView
        android:id="@+id/tvFacebookUrl"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Facebook url" />

    <TextView
        android:id="@+id/tvNumeberWpp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Number wpp" />

    <TextView
        android:id="@+id/tvPrice"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Price" />

</LinearLayout>