<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.DetailLocationDojoFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivDojoDetail"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="70dp"
        android:elevation="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:civ_border_color="@color/C1"
        app:civ_border_width="3dp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/C1"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/tvNameDojo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Name dojo"
            android:textColor="@color/C2"
            android:textSize="21sp"
            android:textStyle="italic" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvNameSensei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Name sensei"
        android:textColor="@color/C6"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Price"
        android:textColor="@color/C6"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Description"
        android:textColor="@color/C6" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="end">


        <ImageView
            android:id="@+id/ivIgDetail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon_ig" />

        <ImageView
            android:id="@+id/ivIgWpp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon_wpp" />

        <ImageView
            android:id="@+id/ivIgMap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/icon_ig" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        android:backgroundTint="@color/C1"
        />

</LinearLayout>