<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#00000000"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#2E2D2D"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="120dp">

            <TextView
                android:id="@+id/tvNameDojo"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="18dp"
                android:text="Nombre del dojo"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSenseiName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="6dp"
                android:text="Sensei a cargo"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/tvNameDojo"
                app:layout_constraintStart_toStartOf="@+id/tvNameDojo"
                app:layout_constraintTop_toBottomOf="@id/tvNameDojo" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivPhotoDojo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp" />


</androidx.cardview.widget.CardView>