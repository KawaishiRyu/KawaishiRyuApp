<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            app:cardElevation="4dp"
            android:layout_marginTop="30dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="95dp">

                <TextView
                    android:id="@+id/tvNameDojo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="18dp"
                    android:text="Nombre del dojo"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="6dp"
                    android:text="Sensei a cargo"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="18dp"
                    app:layout_constraintEnd_toEndOf="@id/tvNameDojo"
                    app:layout_constraintStart_toStartOf="@+id/tvNameDojo"
                    app:layout_constraintTop_toBottomOf="@id/tvNameDojo" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </FrameLayout>


    <ImageView
        android:id="@+id/ivPhotoDojo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#000000"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>