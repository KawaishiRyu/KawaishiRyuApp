<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KawaishiRyu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.KawaishiRyu.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/C1</item>
        <item name="android:textColor">@color/C6</item>
        <item name="endIconCheckable">false</item>
        <item name="closeIconVisible">false</item>
        
    </style>

    <style name="Theme.KawaishiRyu.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.KawaishiRyu.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>